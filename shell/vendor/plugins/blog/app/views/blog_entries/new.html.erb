<h1>New blog_entry</h1>

<%= error_messages_for :blog_entry %>

<% form_for(:blog_entry, :url => { :action => 'create' }) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

