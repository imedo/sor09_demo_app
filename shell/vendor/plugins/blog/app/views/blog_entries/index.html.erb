<h1>Listing blog_entries</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Text</th>
  </tr>

<% for blog_entry in @blog_entries %>
  <tr>
    <td><%=h blog_entry.author %></td>
    <td><%=h blog_entry.text %></td>
    <td><%= link_to 'Show', :action => 'show', :id => blog_entry %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => blog_entry %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => blog_entry }, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New blog_entry', :action => 'new' %>
