<h1>Listing comments</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Text</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.author %></td>
    <td><%=h comment.text %></td>
    <td><%= link_to 'Show', :action => 'show', :id => comment %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => comment %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => comment}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br/>

<%= link_to 'Back', :controller => 'blog_entries', :action => 'show', :id => @blog_entry_id %> |
<%= link_to 'New comment', :action => 'new', :id => @blog_entry_id %>
