<h1>New comment</h1>

<%= error_messages_for :comment %>

<% form_for(:comment, :url => { :action => 'create', :id => @blog_entry_id }) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
