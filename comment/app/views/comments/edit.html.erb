<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for(:comment, :url => { :action => 'update', :id => @comment }) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @comment %> |
<%= link_to 'Back', :controller => 'blog_entries', :action => 'show', :id => @comment.blog_entry_id %>
