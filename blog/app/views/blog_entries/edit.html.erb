<h1>Editing blog_entry</h1>

<%= error_messages_for :blog_entry %>

<% form_for(:blog_entry, :url => { :action => 'update', :id => @blog_entry }) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @blog_entry %> |
<%= link_to 'Back', :action => 'index' %>
